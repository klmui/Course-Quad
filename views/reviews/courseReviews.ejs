<%- include('../partials/header'); %>

<div id="loader" class="center"></div> 

<div class="card">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card-header ml-3" style="width: 100%;">
          <h3 class="card-title text-center">My Course Reviews</h3>
        </div>
          <div class="card-body">
            <!-- instructors -->
            <table id="instructorTable" class="table table-striped table-bordered hover dataTable" style="width:100%">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Date</th>
                  <th>Rating</th>
                  <th>Difficulty</th>
                  <th>Review</th>
                </tr>
              </thead>
              <tbody>
                <% for (var i = 0; i < courseReviews.length; i++) { %>
                  <tr>
                    <td><a href="/courses/<%=courseReviews[i].course_id%>"><%= courseReviews[i].name %></a></td>
                    <td><%= courseReviews[i].date.toString().substring(0, 15) %></td>
                    <td>
                      <% for (var j = 0; j < courseReviews[i].stars; j++) { %>
                        <span class="fa fa-star fa-xs checked"></span>
                      <% } %>
                    </td>
                    <td><%= courseReviews[i].difficulty %></td>
                    <td><%= courseReviews[i].comment %></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('#loader').hide();
  $('.nav-item').removeClass('active border rounded');
</script>

<%- include('../partials/footer'); %>