<%- include('../partials/header'); %>

<div id="loader" class="center"></div> 

<div class="card">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card-header ml-3" style="width: 100%;">
          <h3 class="card-title text-center">Instructors</h3>
        </div>
          <div class="card-body">
            <!-- instructors -->
            <table id="instructorTable" class="table table-striped table-bordered hover dataTable" style="width:100%">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Rating</th>
                </tr>
              </thead>
              <tbody>
                <% for (var i = 0; i < instructors.length; i++) { %>
                <tr>
                  <td><a href="/instructors/<%=instructors[i].instructorID%>"><%=instructors[i].name%></a></td>
                  </td>
                  <td>
                    <span class="fa fa-star fa-xs checked"></span>
                    <span class="fa fa-star fa-xs checked"></span>
                    <span class="fa fa-star fa-xs checked"></span>
                    <span class="fa fa-star fa-xs checked"></span>
                    <span class="fa fa-star fa-xs checked"></span>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('.nav-item').removeClass('active border rounded');
  $('#instructorsTab').addClass('active border rounded');
</script>

<%- include('../partials/footer'); %>