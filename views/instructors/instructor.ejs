    });
    $('.starClick1').addClass('checked');
    $(this).addClass('checked');
  }, function () {
    $('.starClick').each(function () {
      $(this).removeClass('checked');
    })
  });

  $('.starClick3').hover(function () {
    $('.starClick').each(function () {
      $(this).removeClass('checked');
    });
    $('.starClick1').addClass('checked');
    $('.starClick2').addClass('checked');
    $(this).addClass('checked');
  }, function () {
    $('.starClick').each(function () {
