<!-- script to change text -->
<script>
  $(document).ready(function() {
    var greetings = ['course distributions', 'course reviews', 'instructor reviews', 'study groups', 'fun statistics', 'success'];

    var counter = 0;
    var textElem = $('#greeting');
    setInterval(change, 3000);
    function change() {
      textElem.fadeOut(function() {
        textElem.fadeOut(function() {
          textElem.html(greetings[counter]);
          counter++;
          if (counter >= greetings.length) { counter = 0; }
          textElem.fadeIn('slow');
        });
      });
    }
  });
</script>

