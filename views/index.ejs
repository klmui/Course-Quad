<!-- script to change text -->
<script>
  $(document).ready(function() {
    var greetings = ['course distributions', 'course reviews', 'instructor reviews', 'study groups', 'fun statistics'];

    var counter = 0;
    var textElem = $('#greeting');
    setInterval(change, 4000);
    function change() {
      textElem.fadeOut(function() {
        textElem.fadeOut(function() {
          textElem.html("<em>"+greetings[counter]+"</em>");
          counter++;
          if (counter >= greetings.length) { counter = 0; }
          textElem.fadeIn('slow');
        });
      });
    }
  });
</script>

